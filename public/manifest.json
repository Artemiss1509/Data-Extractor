{
  "manifest_version": 3,
  "name": "Monday.com CRM Extractor",
  "version": "1.0",
  "description": "Extract CRM data from Monday.com boards",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  
  "host_permissions": [
    "https://*.monday.com/*"
  ],
  
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["https://*.monday.com/*"],
      "js": ["src/content/content-script.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "index.html",
    "default_title": "CRM Data Extractor",
    "default_icon": {
      "16": "vite.svg",
      "48": "vite.svg",
      "128": "vite.svg"
    }
  },
  
  "icons": {
    "16": "vite.svg",
    "48": "vite.svg",
    "128": "vite.svg"
  }
}